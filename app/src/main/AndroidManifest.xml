<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alan.smartvanity">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.alan.smartvanity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.alan.smartvanity.Widget"
            android:parentActivityName="com.example.alan.smartvanity.Grid">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alan.smartvanity.MainActivity" />
        </activity>
        <activity android:name="com.example.alan.smartvanity.Grid"
            android:parentActivityName="com.example.alan.smartvanity.SelectWidget">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alan.smartvanity.MainActivity" />
        </activity>
        <activity android:name="com.example.alan.smartvanity.SelectWidget"
            android:parentActivityName="com.example.alan.smartvanity.MainActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alan.smartvanity.MainActivity" />
        </activity>
        <activity android:name="com.example.alan.smartvanity.Video"
            android:parentActivityName="com.example.alan.smartvanity.MainActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alan.smartvanity.MainActivity" />
        </activity>
    </application>

</manifest>